<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="800.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ProductivityPlusController">
  <children>
    <MenuBar id="menuBar" VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="Layout">
               <items>
                  <Menu mnemonicParsing="false" text="PresetLayouts">
                    <items>
                      <MenuItem mnemonicParsing="false" onAction="#setLayoutToWorkLayout" text="Work" />
                        <MenuItem mnemonicParsing="false" onAction="#setLayoutToStudyLayout" text="Study" />
                    </items>
                  </Menu>
               </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Modules">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#onDailyTaskListMenuButtonClick" text="DailyTaskList" />
                  <MenuItem mnemonicParsing="false" onAction="#onStopwatchMenuItemClick" text="Stopwatch" />
                  <MenuItem mnemonicParsing="false" onAction="#onNotePadMenuItemClick" text="Notepad" />
                  <MenuItem mnemonicParsing="false" onAction="#onBrainBreakMenuItemClick" text="BrainBreak" />
                  <MenuItem mnemonicParsing="false" onAction="#onMusicPlayerMenuItemClicked" text="MusicPlayer" />
                  <MenuItem mnemonicParsing="false" onAction="#onBrainWarmupMenuItemClicked" text="Brain Warmup" />
                  <MenuItem mnemonicParsing="false" onAction="#onCalculatorMenuClicked" text="Calculator" />
                  <MenuItem mnemonicParsing="false" onAction="#onAffirmationsMenuItemClick" text="Affirmations" />
               </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Program Info">
          <items>
            <MenuItem mnemonicParsing="false" onAction="#onAboutButtonClick" text="About" />
                  <MenuItem mnemonicParsing="false" onAction="#onHelpButtonClick" text="Help" />
          </items>
        </Menu>
            <Menu mnemonicParsing="false" text="Settings">
               <items>
                  <MenuItem mnemonicParsing="false" text="Import Module" />
                  <Menu mnemonicParsing="false" text="Themes">
                     <items>
                        <RadioMenuItem fx:id="midnightThemeButton" mnemonicParsing="false" onAction="#onThemeRadioButtonSelected" selected="true" text="Midnight">
                           <toggleGroup>
                              <ToggleGroup fx:id="themeGroup" />
                           </toggleGroup>
                        </RadioMenuItem>
                        <RadioMenuItem fx:id="SunsetThemeButton" mnemonicParsing="false" onAction="#onThemeRadioButtonSelected" text="Sunset" toggleGroup="$themeGroup" />
                        <RadioMenuItem fx:id="DeepOceanTheme" mnemonicParsing="false" onAction="#onThemeRadioButtonSelected" text="Deep Ocean" toggleGroup="$themeGroup" />
                     </items>
                  </Menu>
                  <MenuItem mnemonicParsing="false" onAction="#onSetNameClick" text="Set name" />
               </items>
            </Menu>
      </menus>
    </MenuBar>
    <AnchorPane id="mainWorkspace" fx:id="mainWorkspace" maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
         <children>
            <Label fx:id="welcomeLabel" layoutX="227.0" layoutY="314.0" opacity="0.0" text="Welcome NAME">
               <font>
                  <Font size="48.0" />
               </font>
            </Label>
         </children></AnchorPane>
  </children>
</VBox>
